<Window x:Class="FingerFinderPresenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FingerFinderPresenter"
        mc:Ignorable="d"
        Title="Finger Finder" Height="420" Width="800">


    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Soubor">
                <MenuItem Header="Otevřít" IsEnabled="False" InputGestureText="Ctrl+O"/>
                <MenuItem x:Name="MenuItem_save" Header="Uložit" IsEnabled="False" Click="MenuItem_save_Click" InputGestureText="Ctrl+S"/>
                <Separator/>
                <MenuItem Header="Import" Click="MenuItem_import_Click"/>
                <Separator/>
                <MenuItem Header="Zavřít" Click="MenuItem_close_Click"  InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="Analýza">
                <MenuItem Header="Detekce markantů"/>
                <MenuItem Header="Klasifikace"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <TabControl x:Name="tabControl_fingerprintDrawer" HorizontalAlignment="Stretch" Grid.Column="0" VerticalAlignment="Stretch" SelectionChanged="tabControl_fingerprintDrawer_SelectionChanged">
                <TabItem x:Name="tab_fingerprintOriginal" Header="Otisk originál" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_fingerprintEqualization" Header="Otisk ekvalizace" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_fingerprintTresholding" Header="Otisk prahování" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_fingerprintSkeleton" Header="Otisk skeleton" IsEnabled="False">
                    <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.531,0.556">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
            </TabControl>

            <StackPanel Orientation="Horizontal" Height="20" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="10,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="button_prevStage" Click="prevStage" IsEnabled="false">Předcházející fáze</Button>
                <Button x:Name="button_nextStage" Click="nextStage" IsEnabled="false">Další fáze</Button>
            </StackPanel>

            <Canvas x:Name="canvas" Grid.Column="1" Grid.RowSpan="2">
                <Image x:Name="image_fingerprint"/>
            </Canvas>

        </Grid>
    </DockPanel>
</Window>
