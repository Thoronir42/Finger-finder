<Window x:Class="FingerFinderPresenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FingerFinderPresenter"
        xmlns:ViewModel="clr-namespace:FingerFinderPresenter.ViewModel"
        xmlns:Model="clr-namespace:FingerprintAnalyzer.Model;assembly=FingerprintAnalyzer"
        
        mc:Ignorable="d"
        Title="Finger Finder" Height="420" Width="800">
    <Window.DataContext>
        <ViewModel:FingerFinder/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type Model:Minutia}" x:Key="MinutiaTpl">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="["/>
                <TextBlock Text="{Binding Position.X, StringFormat={}{0:F4}}"/>
                <TextBlock Text="; "/>
                <TextBlock Text="{Binding Position.Y, StringFormat={}{0:F4}}"/>
                <TextBlock Text="] "/>
                <TextBlock Text="{Binding Type}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>


    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Soubor">
                <MenuItem Header="Import" Command="{Binding CmdImport}"/>
                <Separator/>
                <MenuItem Header="Otevřít"  InputGestureText="Ctrl+O"/>
                <MenuItem x:Name="MenuItem_save" Header="Uložit"  InputGestureText="Ctrl+S" Command="{Binding CmdSave}"/>
                <Separator/>
                <MenuItem Header="Zavřít" Click="MenuItem_close_Click"  InputGestureText="Alt+F4"/>
            </MenuItem>

            <MenuItem Header="Analýza">
                <MenuItem Header="Detekce markantů a klasifikace" Command="{Binding CmdAnalyze}"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TabControl x:Name="tabControl_fingerprintDrawer" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch" SelectedIndex="{Binding SelectedTab}">
                <TabItem x:Name="tab_fingerprintOriginal" Header="Otisk originál" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label>Originální snímek</Label>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_fingerprintEqualization" Header="Otisk ekvalizace" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0">Ekvalizovaný snímek</Label>
                        <Slider Grid.Row="1" Value="{Binding TresholdLevel}" Maximum="255" LargeChange="16" SmallChange="1"></Slider>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TresholdLevel, Mode=OneWay}" IsReadOnly="True"></TextBox>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_fingerprintTresholding" Header="Otisk prahování" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label>Naprahovaný snímek</Label>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_fingerprintSkeleton" Header="Otisk skeleton" IsEnabled="False">
                    <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.531,0.556">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23"/>
                            <RowDefinition Height="23"/>
                            <RowDefinition Height="23"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.ColumnSpan="2">Kostra otisku prstu</Label>
                        <Button Grid.Column="2" Command="{Binding CmdAnalyze}">Spustit analýzu</Button>

                        <TextBox Grid.Row="1" Grid.Column="0" IsReadOnly="True" Text="{Binding SelectedMinutia.Position.X}"></TextBox>
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding SelectedMinutia.Position.Y}"></TextBox>
                        <ComboBox Grid.Row="1" Grid.Column="2" ItemsSource="{Binding MinutiaTypes, Mode=OneTime}" SelectedItem="{Binding SelectedMinutia.Type}"></ComboBox>

                        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">Kategorie</Label>
                        <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding FingerprintCategories, Mode=OneTime}" SelectedItem="{Binding Analyzer.FingerprintData.Category}"></ComboBox>
                        
                        <ListBox  Grid.Row="3" Grid.ColumnSpan="3" x:Name="listBox" ItemTemplate="{StaticResource MinutiaTpl}" ItemsSource="{Binding Analyzer.FingerprintData.Minutiae}" IsSynchronizedWithCurrentItem="False" SelectedItem="{Binding SelectedMinutia}"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <StackPanel Orientation="Horizontal" Height="20" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="10,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="button_prevStage" Command="{Binding PreviousStage}">Předcházející fáze</Button>
                <Button x:Name="button_nextStage" Command="{Binding NextStage}">Další fáze</Button>
                <Button x:Name="button_previewChanges" Command="{Binding PreviewChanges}">Náhlad změn</Button>
            </StackPanel>

            <Canvas x:Name="canvas" Grid.Column="1" Grid.RowSpan="2">
                <Image x:Name="image_fingerprint" Source="{Binding FingerprintImageSource}"/>
            </Canvas>

        </Grid>
    </DockPanel>
</Window>
